
<div class="container">
  <div class="flexbox">
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <div class="cocktail-content">
      <h1> <%= @cocktail.name %> </h1>
      <p> <%= @cocktail.description %></p>
      <p> <strong> Rating: </strong> <%= @cocktail.rating %></p>
        <ul>
        <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.description %> of <%= dose.ingredient.name %> <%= link_to 'Delete', dose_path(dose), method: :delete, class: "btn-xs btn-primary"%> </li>
        <% end %>
        </ul>
        <div class="add_dose_button">
        <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
        </div>
    </div>
  </div>
</div>



